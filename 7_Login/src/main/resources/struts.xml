<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- Activamos el modo de depuración. Ya lo quitaremos en producción -->
	<constant name="struts.devMode" value="true" />

	<package name="paqueteAcciones" extends="struts-default">
	<!-- Los paquetes sirven para agrupar acciones -->
		
		<action name="login" class="es.escueladeprogramacion.struts2login.LoginAccion">
			<result name="login">/WEB-INF/jsp/login.jsp</result>
                        <result name="success">/WEB-INF/jsp/menuPpal.jsp</result>
		</action>
	</package>

</struts>